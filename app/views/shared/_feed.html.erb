<% if @feed_items.any? %>
  <ol class="microposts">
    <% @feed_items.each do |feed_item| %>
      <%= render feed_item %>
      <% if !feed_item.replying %>
        <span class="reply" id="reply-<%= feed_item.id %>">
          <%= link_to "返信", micropost_path(feed_item.id) %>
        </span>
      <% end %>
    <% end %>
  </ol>
  <%= will_paginate @feed_items %>
<% end %>